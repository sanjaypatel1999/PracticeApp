@model IEnumerable<ApplicationName.Models.Image>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="table table-bordered">
                <thead>
                    <tr class="text-center">
                        <th>Id</th>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                @foreach(var d in Model)
                {
                    <tr class="text-center">
                        <td>@d.Id</td>
                        <td>@d.Name</td>
                        <td><img src="@d.ImagePath" height="100px" width="100px" /></td>
                        <td>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-controller="Upload" asp-route-id="@d.Id">Delete</a>
                        </td>
                        <td>
                            <a class="btn btn-sm btn-info" asp-action="Update" asp-controller="Upload" asp-route-id="@d.Id">Upload</a>
                        </td>
                    </tr>
                }
            </div>
        </div>
    </div>
</div>

